generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notice {
  id          String   @id @default(cuid())
  no          Int
  title       String
  link        String
  postDate    String   @map("post_date")
  category    String
  course      String   @default("General")
  year        String   @default("N/A")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([link])
  @@map("notices")
}